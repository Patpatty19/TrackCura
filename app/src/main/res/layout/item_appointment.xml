<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/card_background"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <!-- Doctor Name -->
    <TextView
        android:id="@+id/tvDoctorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor: Dr. John Doe"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primary_dark"
        android:paddingBottom="4dp" />

    <!-- Appointment Date -->
    <TextView
        android:id="@+id/tvAppointmentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: 12 March 2025"
        android:textSize="14sp"
        android:textColor="@color/text_dark"
        android:paddingBottom="2dp" />

    <!-- Appointment Time -->
    <TextView
        android:id="@+id/tvAppointmentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: 10:30 AM"
        android:textSize="14sp"
        android:textColor="@color/text_dark"
        android:paddingBottom="8dp" />

    <!-- Action Buttons (Cancel) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <ImageButton
            android:id="@+id/btnCancelAppointment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Cancel Appointment"
            android:padding="4dp"/>
    </LinearLayout>

</LinearLayout>
