<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pastel_blue"
    tools:context=".DoctorDashboardActivity"
    >

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#3A86FF"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Doctor Dashboard"
        app:titleTextColor="@android:color/white"/>

    <!-- RecyclerView for patients -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/patientListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        tools:listitem="@layout/item_patient"/>

    <!-- Logout Button -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="LOGOUT"
        android:backgroundTint="#FF9F43"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:paddingHorizontal="24dp"
        android:drawableStart="@drawable/ic_logout"
        android:drawablePadding="8dp"/>


</LinearLayout>
