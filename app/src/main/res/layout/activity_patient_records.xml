<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastel_blue"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patient Records"
            style="@style/TitleTextStyle"
            android:layout_marginBottom="16dp"/>

        <!-- Patient Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="16dp"
            android:elevation="2dp"
            android:radius="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/txtPatientName"
                style="@style/TextLabelStyle"
                android:text="Name: "
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/txtPatientAge"
                style="@style/TextLabelStyle"
                android:text="Age: "
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/txtContactInfo"
                style="@style/TextLabelStyle"
                android:text="Contact: "
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/txtMedicalHistory"
                style="@style/TextLabelStyle"
                android:text="Medical History: "
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/txtDoctorNotes"
                style="@style/TextLabelStyle"
                android:text="Doctor's Notes: "
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/txtPrescriptions"
                style="@style/TextLabelStyle"
                android:text="Prescriptions: "
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <!-- Patient ListView -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Patients"
            style="@style/SubtitleTextStyle"
            android:layout_marginBottom="10dp"/>

        <ListView
            android:id="@+id/listViewPatients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:background="@color/white"
            android:elevation="2dp"
            android:padding="10dp"
            android:layout_marginBottom="16dp"/>

        <!-- Add Patient Record Button -->
        <Button
            android:id="@+id/btnAddPatientRecord"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Patient Record"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</ScrollView>
